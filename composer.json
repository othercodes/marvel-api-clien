{
  "name": "root/marvel-api-client",
  "description": "Marvel API Client allows developers everywhere to access information about Marvel's vast library of comics.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Unay Santisteban",
      "email": "usantisteban@othercode.es"
    }
  ],
  "require": {
    "php": ">= 7.4",
    "ext-json": "*",
    "doctrine/inflector": "^1.1.0 || ^2.0.0",
    "guzzlehttp/guzzle": "~6.0",
    "php-http/httplug": "^2.0",
    "php-http/guzzle6-adapter": "^2.0",
    "monolog/monolog": "^1.24"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "fzaninotto/faker": "^1.9",
    "mockery/mockery": "^1.2",
    "phpunit/phpunit": "^9.4"
  },
  "autoload": {
    "psr-4": {
      "OtherCode\\Marvel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --testdox"
  }
}
